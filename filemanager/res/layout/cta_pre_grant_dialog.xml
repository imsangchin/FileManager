<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="?normal_background_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_folder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cta_pre_grant_dialog_storage_permission"
            android:textSize="18sp"
            android:layout_margin="10sp"
            android:textColor="?text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:src="@drawable/ic_contacts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cta_pre_grant_dialog_account_permission"
            android:textSize="18sp"
            android:layout_margin="10sp"
            android:textColor="?text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:src="@drawable/ic_swap_vert"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cta_dialog_content"
            android:textSize="18sp"
            android:layout_margin="10sp"
            android:textColor="?text_color" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cta_check_title"
            android:textSize="15sp"
            android:id="@+id/cta_pre_grant_dialog_checkBox"
            style="?checkbox" />
    </LinearLayout>
</LinearLayout>

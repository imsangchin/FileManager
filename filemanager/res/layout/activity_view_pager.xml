<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_viewer"
    android:background="@drawable/asus_ic_ab_back_photoviewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.asus.filemanager.activity.HackyViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" />

    <android.support.v7.widget.RecyclerView
        android:background="@drawable/asus_ep_photoviewer_bar_bg"
        android:id="@+id/thumbnail_recyclerView"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
    />
    <TextView
        android:id="@+id/textViewColorful"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--  
    <com.asus.filemanager.activity.HackyViewPager

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/wifi_direct_search_container">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="6dip">

        <ImageView android:id="@+id/wifi_direct_search_list_item_icon"
            android:src="@drawable/asus_ep_filemanager_wifi_direct_search_device"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="38dip"
            android:cropToPadding="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:scaleType="centerInside"/>

        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wifi_direct_search_list_item_icon"
            android:gravity="center_vertical"
            android:paddingLeft="20dip">

            <TextView android:id="@+id/wifi_direct_search_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/wifidirect_touch_to_connect"
                android:textSize="18sp"
                android:singleLine="true" />

            <TextView android:id="@+id/wifi_direct_search_device_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/wifidirect_touch_to_connect"
                android:paddingTop="2dip"
                android:textSize="18sp"
                android:singleLine="true" />

        </LinearLayout>

        <ImageView android:id="@+id/wifi_direct_signal_icon"
            android:src="@drawable/asus_ep_filemanager_wifi_signal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingRight="40dip"
            android:cropToPadding="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"/>

    </RelativeLayout>

</LinearLayout>
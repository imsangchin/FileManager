<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="13dp"
    android:paddingTop="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
	android:gravity="center_horizontal"
	>

    <LinearLayout
        android:id="@+id/popup_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		 android:orientation="vertical"
		>
	<LinearLayout
        android:id="@+id/popup_content_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:gravity="center"
	   android:background="@drawable/asus_airview_photo_with_text_photomask"

		>

    <ImageView android:id="@+id/preview"
        android:layout_width="@dimen/airview_image_width"
        android:layout_height="@dimen/airview_image_height"


        android:scaleType="centerInside"/>
	 </LinearLayout>
	 <View android:id="@+id/popup_content_img_divder"
           android:layout_height="1dp"
           android:background="#b4b4b4"
            android:layout_width="match_parent"
            android:focusable="false"
            android:clickable="false"
           />
    <LinearLayout
        android:id="@+id/popup_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
		android:paddingLeft="13dp"
        android:paddingRight="13dp"
		android:paddingTop="13dp"


        >
        <LinearLayout android:id="@+id/name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

			>
            <TextView
			android:id="@+id/show_info_file_name"
			android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
				android:singleLine="true"
				android:ellipsize="middle"
                android:textSize="18dp"/>

            <TextView android:id="@+id/info_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:singleLine="true"
				android:ellipsize="middle"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/size_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"

			>

            <TextView
		android:id="@+id/show_info_file_size"
		android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_size"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
				android:singleLine="true"
				android:ellipsize="middle"
                android:textSize="18dp"/>

            <TextView android:id="@+id/info_file_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textSize="18dp"
				android:singleLine="true"
				android:ellipsize="middle"
				/>
        </LinearLayout>

        <LinearLayout android:id="@+id/file_type_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

           >

            <TextView
	     android:id="@+id/show_info_file_type"
		android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_type"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
				android:singleLine="true"
				android:ellipsize="middle"
                android:textSize="18dp"/>

            <TextView android:id="@+id/info_file_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
				android:singleLine="true"
				android:ellipsize="middle"
                android:textSize="18dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
  android:orientation="vertical"
  android:layout_width="fill_parent" android:layout_height="wrap_content">
<TextView android:id="@+id/ExistFile"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:textColor="?text_color" />
<TextView android:text="@string/paste_exist_replace"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:textColor="?text_color" />
<LinearLayout
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="fill_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/ExistOldIcon"
        android:minWidth="74px"
        android:layout_height="32dp" android:layout_width="wrap_content"/>
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/ExistOldSize"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:textColor="?text_color" />
        <TextView android:id="@+id/ExistOldDate"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:textColor="?text_color" />
    </LinearLayout>
</LinearLayout>
<TextView android:text="@string/paste_exist_to"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:textColor="?text_color" />
<LinearLayout
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="fill_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/ExistNewIcon"
        android:minWidth="74px"
        android:layout_height="32dp" android:layout_width="wrap_content"/>
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/ExistNewSize"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:textColor="?text_color" />
        <TextView android:id="@+id/ExistNewDate"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:textColor="?text_color" />
    </LinearLayout>
</LinearLayout>
<CheckBox android:id="@+id/ExistCheckBox" android:text="@string/paste_exist_apply"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    style="?checkbox" />
</LinearLayout>
</ScrollView>
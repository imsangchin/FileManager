<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/tutorial_page_icon_margin_right"
        android:layout_marginEnd="@dimen/tutorial_page_icon_margin_right"
        android:scaleType="fitXY"
        android:src="@drawable/asus_app_icon_filemanager"
        android:contentDescription="@null"/>

    <LinearLayout
        android:id="@+id/LinearLayout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/tutorial_margin_left"
        android:layout_marginEnd="@dimen/tutorial_margin_left"
        android:layout_toRightOf="@id/imageView"
        android:layout_toEndOf="@id/imageView">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:singleLine="true"
            android:text="@string/tutorial_category_title"
            android:textColor="@color/tutorial_title_color"
            android:textSize="@dimen/tutorial_page_title_font_size"
            android:layout_marginBottom="@dimen/tutorial_page_title_margin_bottom"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout_title"
        android:layout_marginRight="@dimen/tutorial_margin_left"
        android:layout_marginEnd="@dimen/tutorial_margin_left"
        android:layout_toRightOf="@id/imageView"
        android:layout_toEndOf="@id/imageView">

        <TextView
            android:id="@+id/textView_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:text="@string/tutorial_category_content"
            android:textSize="@dimen/tutorial_page_content_font_size"
            android:textColor="?text_color" />
    </LinearLayout>

</RelativeLayout>
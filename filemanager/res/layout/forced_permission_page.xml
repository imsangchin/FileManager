<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/permission_dialog_padding"
    android:paddingStart="@dimen/permission_dialog_padding"
    android:paddingRight="@dimen/permission_dialog_padding"
    android:paddingEnd="@dimen/permission_dialog_padding"
    android:orientation="vertical"
    android:background="?normal_background_color" >

    <ScrollView
        android:id="@+id/force_permission_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/force_permission_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/force_permission_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/permission_dialog_title_margin_top"
                android:layout_gravity="center"
                android:text="@string/m_permission_setting_title_files"
                android:textColor="@color/permission_dialog_title"
                android:textSize="@dimen/permission_dialog_title_size"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/force_permission_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/permission_dialog_subtitle_margin_top"
                android:gravity="center"
                android:text="@string/m_permission_setting_subtitle_files"
                android:textSize="@dimen/permission_dialog_subtitle_size"
                android:fontFamily="sans-serif"
                android:textColor="?text_color" />

            <TextView
                android:id="@+id/force_permission_sub_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/permission_dialog_subtitle_margin_top"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/m_permission_dialog_message"
                android:textColor="@color/permission_dialog_subtitle"
                android:textSize="@dimen/permission_dialog_subtitle_size"
                android:fontFamily="sans-serif"
                 />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/permission_dialog_image_height"
                android:layout_marginTop="@dimen/permission_dialog_image_margin_top"
                android:layout_gravity="center"
                android:src="@drawable/asus_permission_image"
                android:scaleType="centerInside"
                android:contentDescription="@null"/>

            <Button
                android:id="@+id/turn_on_button_scrollview"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/permission_dialog_button_margin_top"
                android:layout_marginBottom="@dimen/permission_dialog_button_margin_bottom"
                android:background="@drawable/round_button"
                android:textSize="@dimen/force_permission_button_text_size"
                android:textColor="#FFFFFF"
                android:text="@string/m_permission_setting_turn_on"
                android:minHeight="37dp"
                android:minWidth="143dp"
                android:fontFamily="sans-serif-medium"
                android:typeface="normal"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/turn_on_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/permission_dialog_button_margin_top"
        android:layout_marginBottom="@dimen/permission_dialog_button_margin_bottom"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_button"
        android:textSize="@dimen/force_permission_button_text_size"
        android:textColor="#FFFFFF"
        android:text="@string/m_permission_setting_turn_on"
        android:minHeight="37dp"
        android:minWidth="143dp"
        android:fontFamily="sans-serif-medium"
        android:typeface="normal"
        android:visibility="gone"/>
</LinearLayout>

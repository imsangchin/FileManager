<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
	android:paddingTop="13dp"
    android:paddingBottom="13dp">
    <LinearLayout android:id="@+id/popup_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

	android:orientation="vertical">


    <LinearLayout android:id="@+id/name_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
		android:id="@+id/show_info_file_name"
		android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
			android:singleLine="true"
			android:ellipsize="middle"
            android:textSize="18dp"/>

        <TextView android:id="@+id/info_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:singleLine="true"
			android:ellipsize="middle"
            android:textSize="18dp"
            android:maxWidth="300dp"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/size_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
       >

        <TextView
		 android:id="@+id/show_info_file_size"
		android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_size"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
			android:singleLine="true"
			android:ellipsize="middle"
            android:textSize="18dp"/>

        <TextView android:id="@+id/info_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="18dp"
			android:ellipsize="middle"
            android:singleLine="true"
            android:maxWidth="300dp"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/file_num_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
		android:id="@+id/show_info_file_num"
		android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_file_num"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
			android:singleLine="true"
			android:ellipsize="middle"
            android:textSize="18dp"/>

        <TextView android:id="@+id/info_file_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="18dp"
			android:singleLine="true"
			android:ellipsize="middle"
            android:maxWidth="300dp"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/file_type_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
		android:id="@+id/show_info_file_type"
		android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_type"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
			android:singleLine="true"
			android:ellipsize="middle"
            android:textSize="18dp"/>

        <TextView android:id="@+id/info_file_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
			android:singleLine="true"
			android:ellipsize="middle"
            android:textSize="18dp"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>

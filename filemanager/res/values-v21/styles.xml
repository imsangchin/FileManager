<resources>
    <style name="ThemeAppCompatLightNoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/statusbar_color</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/statusbar_color</item>
        <item name="actionModeBackground">@color/actionmode_background</item>
        <item name="android:actionOverflowButtonStyle">@style/Ep.ActionButton.Overflow</item>
        <item name="actionOverflowButtonStyle">@style/Ep.ActionButton.Overflow</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="dropDownListViewStyle">@style/DefaultDropDownListStyle</item>
        <item name="android:itemBackground">@drawable/default_menuitem_selector</item>
        <item name="searchViewStyle">@style/DefaultSearchViewStyle</item>
        <item name="buttonStyle">@style/ZenUIAppCompatButtonStyle</item>
    </style>

    <style name="ThemeAppCompatDarkNoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/statusbar_color</item>
        <item name="actionModeBackground">@color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/Ep.Dark.ActionButton.Overflow</item>
        <item name="actionOverflowButtonStyle">@style/Ep.Dark.ActionButton.Overflow</item>
        <item name="android:itemBackground">@drawable/dark_menuitem_selector</item>
        <item name="dropDownListViewStyle">@style/DarkDropDownListStyle</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/statusbar_color</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="drawerArrowStyle">@style/DarkDrawerArrowStyle</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionButtonStyle">@style/Ep.ActionButton</item>
        <item name="android:homeAsUpIndicator">@drawable/asussl_ic_dark_ab_back</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="searchViewStyle">@style/DarkSearchViewStyle</item>
        <item name="buttonStyle">@style/ZenUIAppCompatButtonStyle</item>
        <!--<item name="background_color">@style/Dark_Background</item> -->
    </style>

    <style name="Theme.BaseActivity" parent="android:Theme.DeviceDefault.Light">
        <item name="android:actionOverflowButtonStyle">@style/Ep.ActionButton.Overflow</item>
        <item name="android:actionButtonStyle">@style/Ep.ActionButton</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:colorPrimaryDark">@color/statusbar_color</item>
        <item name="android:colorAccent">?android:attr/colorPrimaryDark</item>
        <item name="android:actionBarStyle">@style/ZenUIActionBarStyle</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Dark.BaseActivity" parent="android:Theme.DeviceDefault.Light">
        <item name="android:actionOverflowButtonStyle">@style/Ep.ActionButton.Overflow</item>
        <item name="android:actionButtonStyle">@style/Ep.ActionButton</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:colorPrimaryDark">@color/statusbar_color</item>
        <item name="android:colorAccent">?android:attr/colorPrimaryDark</item>
        <item name="android:actionBarStyle">@style/DarkThemeActionBarStyle</item>
        <item name="drawerArrowStyle">@style/DarkDrawerArrowStyle</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/dark_theme_text_color</item>
        <item name="android:homeAsUpIndicator">@drawable/asussl_ic_dark_ab_back</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>


    <style name="ThemeAppCompatFileManagerActivity" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionOverflowButtonStyle">@style/Ep.ActionButton.Overflow</item>
        <item name="android:actionButtonStyle">@style/Ep.ActionButton</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:colorPrimaryDark">@color/statusbar_color</item>
        <item name="android:colorAccent">?android:attr/colorPrimaryDark</item>
        <item name="android:actionBarStyle">@style/ZenUIActionBarStyle</item>
    </style>

    <style name="Theme.FULLSCREEN_DIALOG" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/statusbar_color</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/theme_color</item>
        <item name="actionModeBackground">@color/actionmode_background</item>
    </style>

    <style name="Ep.ActionButton.Overflow" parent="android:style/Widget.DeviceDefault.ActionButton.Overflow">
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">34dip</item>
        <item name="android:src">@drawable/asus_ic_menu_grey</item>
        <item name="android:id">@id/overflow_menu_id</item>
    </style>

    <style name="Ep.Dark.ActionButton.Overflow" parent="android:style/Widget.DeviceDefault.ActionButton.Overflow">
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">34dip</item>
        <item name="android:src">@drawable/asus_ic_menu_light</item>
        <item name="android:id">@id/overflow_menu_id</item>
    </style>

    <style name="CustomCheckBox">
        <item name="android:theme">@style/CheckBoxAppTheme</item>
    </style>

    <style name="CheckBoxAppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorAccent">
            @color/theme_color
        </item>
        <item name="android:colorControlNormal">
            @color/theme_color
        </item>
        <item name="android:colorControlHighlight">
            @color/theme_color
        </item>
    </style>
    <style name="AppTranslucentTheme" parent="android:Theme.NoDisplay">
    </style>
</resources>

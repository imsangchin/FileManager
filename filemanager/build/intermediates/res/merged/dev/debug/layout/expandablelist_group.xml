<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/group_space"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@android:color/transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingRight="2dp"
        android:background="?normal_background_color" >

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="Roboto Regular"
            android:textSize="@dimen/file_list_item_name_textsize"
            android:textColor="?analyzer_cardbase_title_color" />

        <ImageView
            android:id="@+id/indicator_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/asus_ic_open" />

        <ImageView
            android:id="@+id/indicator_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/asus_ic_close" />
    </RelativeLayout>

</LinearLayout>
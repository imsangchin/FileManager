<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <EditText
            android:id="@+id/uv_comment_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/uv_comment_hint"
            android:inputType="textMultiLine|textCapSentences"
            android:minHeight="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/uv_ListSeparatorLight"
                android:text="@string/uv_your_email_address"
                android:textIsSelectable="false" />

            <EditText
                android:id="@+id/uv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="254"
                android:hint="@string/uv_email_address"
                android:inputType="textEmailAddress" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/uv_ListSeparatorLight"
                android:text="@string/uv_your_name"
                android:textIsSelectable="false" />

            <EditText
                android:id="@+id/uv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:hint="@string/uf_sdk_name_hint"
                android:inputType="textCapSentences" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.google.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:clickable="true"
        app:uf_cardCornerRadius="8dp"
        >
        <!--
            app:cardBackgroundColor="#ffff0000"
        -->
 
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="?android:attr/selectableItemBackground" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/message_title"
                android:textSize="17sp"
                android:textColor="#3c3c3c"
                android:fontFamily="sans-serif-medium" tools:targetApi="16"
                android:layout_marginBottom="7dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/type_picture_icon"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/message_type"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif" tools:targetApi="16"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/message_date"
                    android:textSize="12sp"
                    android:textColor="#b5b5b5"
                    android:fontFamily="sans-serif" tools:targetApi="16"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/message_content"
                android:textSize="14sp"
                android:textColor="#767676"
                android:layout_marginBottom="7dp"
                android:fontFamily="sans-serif" tools:targetApi="16"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:id="@+id/big_picture_icon"/>
        </LinearLayout>
    </android.google.support.v7.widget.CardView>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent" android:layout_height="fill_parent">
    <EditText android:id="@+id/edit_name"
        android:layout_height="@dimen/dialog_edittext_hight"
        android:layout_width="fill_parent"
        android:singleLine="true"
        android:inputType="textCapSentences|textNoSuggestions"
        android:imeOptions="actionDone"
		android:paddingLeft="5dp"
		android:background="?edittext_background" >
    </EditText>
    <TextView android:id="@+id/edit_toast"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:textColor="@color/edit_toast_color"
	            android:textSize="@dimen/edit_toast_textsize"
	            android:visibility="gone"/>
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/uf_sdk_rate_star_bg"
                android:adjustViewBounds="true"/>

            <ImageView android:id="@+id/cancel_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/uf_sdk_rate_star_cancel"/>

            <ImageView 
                android:id="@+id/circle"
                android:layout_width="90dp"
                android:layout_height="90dp"           
                android:layout_centerInParent="true"/>

            <ImageView android:id="@+id/app_icon"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">
            <View android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_weight="0"
                android:src="@drawable/uf_sdk_rate_star"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_weight="0"
                android:src="@drawable/uf_sdk_rate_star"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_weight="0"
                android:src="@drawable/uf_sdk_rate_star"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_weight="0"
                android:src="@drawable/uf_sdk_rate_star"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_weight="0"
                android:src="@drawable/uf_sdk_rate_star"/>
            <View android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#282929"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"/>
        <TextView
            android:id="@+id/recommand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#282929"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_marginTop="5dp"
            android:gravity="center"/>
        <CheckBox
            android:id="@+id/recommand_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:textSize="18sp"
            android:visibility="gone" 
            android:text="@string/uf_sdk_already_give_5star"/>
        <TextView android:id="@+id/ok_button"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/uf_sdk_rate_button_high"
            android:layout_marginLeft="@dimen/uf_sdk_rate_button_margin"
            android:layout_marginRight="@dimen/uf_sdk_rate_button_margin"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="#0000ff"
            android:gravity="center"/>
                 
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/uf_sdk_rate_button_high"
            android:gravity="center"
            android:visibility="invisible"/>        

</LinearLayout>

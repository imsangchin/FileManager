<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/photo_picker_item_root">
    <LinearLayout
        android:layout_width="@dimen/photo_picker_item_press_width"
        android:layout_height="@dimen/photo_picker_item_shadow_height"
        android:orientation="vertical"
        android:padding="0dp"
        android:id="@+id/photo_picker_item_pressed"
        android:background="@drawable/list_selected_holo_light"
        android:visibility="invisible">
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/photo_select_grid_item_width"
        android:layout_height="@dimen/photo_picker_item_shadow_height"
        android:orientation="vertical"
        android:padding="0dp"
        android:id="@+id/photo_picker_item_normal"
        android:background="@drawable/asus_ep_photo_selection_shadow">
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:gravity="center">
                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="@dimen/photo_select_grid_item_width"
                    android:layout_height="@dimen/photo_select_grid_item_height"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/asus_ep_photo_picker_default_icon"/>
